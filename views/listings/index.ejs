<% layout("/layouts/boilerplate") %>

<style>
    #filter{
    
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filters{
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;

    }
    .filters:hover{
        opacity: 1;
        cursor: pointer;

    }
    .tax-info{
        display: none;
        
    }
    .tax{
       border: 1px solid black;
       border-radius: 1rem;
       height: 3.5rem;
       padding: 1rem;
       margin-left: 5rem;

    }
</style>
    <div id="filter"><div class="filters">
<div><i class="fa-solid fa-fire"></i></div><p>Trending</p>
    </div>
      <div id="filter"><div class="filters">
<div><i class="fa-solid fa-bed"></i></div><p>Rooms</p>
    </div>
    <div class="filters">
<div><i class="fa-solid fa-gopuram"></i></div><p>Iconic cities</p>
    </div>
    <div class="filters">
<div><i class="fa-solid fa-house"></i></div><p>Cabins</p>
    </div>
    <div class="filters">
<div><i class="fa-solid fa-umbrella-beach"></i></div><p>Beach</p>
    </div>
        <div class="filters">
<div><i class="fa-brands fa-fort-awesome"></i></div><p>Castles</p>
    </div>
        <div class="filters">
<div><i class="fa-solid fa-mountain-sun"></i></div><p>Mountains</p>
    </div>
            <div class="filters">
<div><i class="fa-solid fa-person-swimming"></i></div><p>Pools</p>
    </div>
                <div class="filters">
<div><i class="fa-solid fa-tents"></i></div><p>Camping</p>
    </div>
                <div class="filters">
<div><i class="fa-solid fa-tractor"></i></div><p>Farms</p>
    </div>


    <div class="tax">
        <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display Taxes</label>
</div>
    </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of alllistings){%>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <!-- <img src="" class="card-img-top" alt="..."> -->
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height:20rem"/>
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                   <b><%= listing.title %><br></b>
                  
                    &#8377;<%= listing.price%>/night <i class="tax-info">+18% GST</i>
                </p>
                </div>
              </div>
              <% } %>
    </div>
    <script>
        let tax = document.getElementById("switchCheckDefault");
        tax.addEventListener("click",()=>{
            let taxInfo = document.querySelectorAll(".tax-info");
            if(tax.checked){
                taxInfo.forEach((el)=>{
                    el.style.display = "inline";
                })
            }else{
                taxInfo.forEach((el)=>{
                    el.style.display = "none";
                })
            }
        })
    </script>
